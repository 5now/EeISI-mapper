<?xml version="1.0" encoding="UTF-8"?>
<jxb:bindings version="3.0"
              xmlns:jxb="https://jakarta.ee/xml/ns/jaxb"
              xmlns:xs="http://www.w3.org/2001/XMLSchema"
              xmlns:fpa="http://ivaservizi.agenziaentrate.gov.it/docs/xsd/fatture/v1.2"
              schemaLocation="../../../../converter-commons/src/main/resources/converterdata/converter-commons/fattpa/xsdstatic/Schema_del_file_xml_FatturaPA_versione_1.2.xsd">
    <jxb:globalBindings>
        <jxb:javaType name="javax.xml.datatype.XMLGregorianCalendar"
                      xmlType="xs:date"

                      parseMethod="it.infocert.eigor.fattpa.commons.jaxbindings.DateAdapter.unmarshal"
                      printMethod="it.infocert.eigor.fattpa.commons.jaxbindings.DateAdapter.marshal"/>

        <jxb:javaType name="javax.xml.datatype.XMLGregorianCalendar"
                      xmlType="xs:dateTime"

                      parseMethod="it.infocert.eigor.fattpa.commons.jaxbindings.DateTimeAdapter.unmarshal"
                      printMethod="it.infocert.eigor.fattpa.commons.jaxbindings.DateTimeAdapter.marshal"/>

        <jxb:javaType name="java.math.BigDecimal"
                      xmlType="fpa:RateType"

                      parseMethod="it.infocert.eigor.fattpa.commons.jaxbindings.Amount2DecimalAdapter.unmarshal"
                      printMethod="it.infocert.eigor.fattpa.commons.jaxbindings.Amount2DecimalAdapter.marshal"/>

        <jxb:javaType name="java.math.BigDecimal"
                      xmlType="fpa:Amount2DecimalType"

                      parseMethod="it.infocert.eigor.fattpa.commons.jaxbindings.Amount2DecimalAdapter.unmarshal"
                      printMethod="it.infocert.eigor.fattpa.commons.jaxbindings.Amount2DecimalAdapter.marshal"/>

        <jxb:javaType name="java.math.BigDecimal"
                      xmlType="fpa:Amount8DecimalType"

                      parseMethod="it.infocert.eigor.fattpa.commons.jaxbindings.Amount8DecimalAdapter.unmarshal"
                      printMethod="it.infocert.eigor.fattpa.commons.jaxbindings.Amount8DecimalAdapter.marshal"/>
    </jxb:globalBindings>

</jxb:bindings>
